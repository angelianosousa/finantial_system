<nav class="navbar navbar-light" style="background-color:DarkSlateGray;color:white;border-radius:10px;">
  <div class='row'>
    <div class='col'>
      <%= search_form_for @q, url: dashboard_index_path, html: { class: 'form-row my-2 my-lg-0' } do |f| %>
        <div class='form-row align-items-center'>

          <div class='form-group col-md-2'>
            <%= f.label :category, 'Category', class:'label-control', style:'margin-top: 14px;' %>
            <%= f.select :category_id_eq, options_for_select(Category.pluck(:title, :id)), { include_blank: 'All'}, {class:'form-control'} %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.label :price, 'Price (R$)', class:'label-control', style:'margin-top: 14px;' %>
            <%= f.number_field :price_cents_gteq, class:'form-control', in:0..999999, step: :any %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.number_field :price_cents_lteq, class:'form-control', in:0..999999, step: :any, style:'margin-top: 40px;' %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.label :date, 'Date', class:'label-control', style:'margin-top: 14px;' %>
            <%= f.date_field :date_gteq, class:'form-control', default: Date.today %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.date_field :date_lteq, class:'form-control', default: Date.today, style:'margin-top: 40px;' %>
          </div>
          
          <div class='form-group col-md-1 text-right mt-5'>
            <%= f.submit 'Search', class:'btn btn-outline-light btn-round btn-sm px-5' %>
            <%= link_to 'Clear', dashboard_index_path, class:'btn btn-outline-info btn-round btn-sm px-5 mr-2' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
