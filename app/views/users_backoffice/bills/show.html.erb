<div class='container'>
  <div class='card'>
    <div class='card-header'>
      <div class='float-left'>
        <h3>Bill Title: <%= @bill.title %></h3>
      </div>

      <div class='float-right'>
        <h3><%= bill_payment @bill.status, font_size: '25px' %> <%= bill_due_status @bill, font_size: '25px' %></h3>
      </div>
    </div>
    <div class='card-body'>
      <div class='row'>
        <div class='col-sm'>
          <p><strong>Price:</strong> <%= @bill.price_cents %></p>
        </div>

        <div class='col-sm'>
          <p><strong>Due pay:</strong> <%= @bill.due_pay %></p>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm'>
          <p><strong>Bill type:</strong> <%= @bill.bill_type %><p>
        </div>

        <div class='col-sm'>
          <p><strong>Status:</strong> <%= @bill.status %></p>
        </div>
      </div>
    </div>
  </div>
  <div class='card-footer'>
    <%= link_to '', edit_users_backoffice_bill_path(@bill), class:'btn btn-info fa fa-edit' %>
    <%= link_to '', users_backoffice_bills_path, class:'btn btn-secondary fa fa-arrow-left' %>
  </div>
</div>
<br>

<div class='container'>
  <div class='card border-dark'>
    <div class='card-header'>
      <h3 class='mt-3'>Transactions - <%= humanized_money_with_symbol @transactions.sum(:price_cents) %></h3>
    </div>
    <div class='card-body'>
      <table class='table table-hover table-borderless'>
        <thead class='background-finances-green'>
          <th>Account</th>
          <th>Category</th>
          <th>Price</th>
          <th>Date</th>
          <th>Description</th>
        </thead>
        <% @transactions.each do |transaction| %>
          <tbody class='border-bottom'>
            <tr>
              <td><%= transaction.account&.title %></td>
              <td><%= transaction.category&.title %></td>
              <td><%= value_style transaction %></td>
              <td><%= transaction.date %></td>
              <td><%= transaction.description %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class='container-fluid'>
      <%= paginate @transactions %>
    </div>
  </div>

</div>
<br>
