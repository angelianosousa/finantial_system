<%= form_with(model: [:users_backoffice, @category], local: true) do |form| %>

<% if @category.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
<%= form.hidden_field :user_profile_id, value: current_user.user_profile.id %>

<div class="row">
  <div class="col-md-12 col-xl-12 col-sm-12">
    <div class="form-group">
      <%= form.label :Title %>
      <%= form.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :'Category type' %>
      <%= form.select :category_type, options_for_select(Category.category_types), {}, {class:"form-control"} %>
    </div>
  </div>
</div>

<div class="actions">
  <%= form.submit "Save", class:"btn btn-primary" %>
  <%= link_to 'Back', users_backoffice_categories_path, class:'btn btn-secondary' %>
</div>
<% end %>