<h4>Transações</h4>

<div class="row">

  <div class="col-xl-6 col-md-6 col-sm-6">
    <div class="row">

      <div class="col-xl-2 col-md-2 col-sm-2">
        <%= link_to "#", class:"btn btn-success btn-sm my-sm-3", "data-toggle":"modal", "data-target":"#newTransactionModal", style:"width:80px" do %>
          <i class="fa fa-plus-square"></i>
        <% end %>
      </div>
      
      <div class="col-xl-9 col-md-9 col-sm-9">
        <%= form_with url: users_backoffice_transactions_path, method: :get, local: true, class:"form-inline my-2 my-sm-2" do |form| %>
          <%= form.select :order_per_attribute, options_for_select([["Titulo", :title], ["Data", :date], ["R$ Valor", :value]]), {}, {class:"form-control-sm",  style:"width:100px;"} %>&nbsp;
          <%= form.select :up_down, options_for_select([["Ascendente", :asc], ["Decrescente", :desc]]), {}, {class:"form-control-sm",  style:"width:130px;"} %>&nbsp;
          <%= form.submit "Filtrar", class:"btn btn-info btn-sm my-2 my-sm-2" %>
        <% end %>
      </div>
    </div>
  </div>


  <div class="col-xl-6 col-md-6 col-sm-6" style="float: left;">
    <%= form_with url: users_backoffice_transactions_path, method: :get, local: true, class:" form-inline my-2 my-sm-3" do |form| %>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= form.search_field :title, class:"form-control-sm", style:"width:210px;" %>
        </div>
        <%= form.submit 'Pesquisar', class:"btn btn-success btn-sm" %>
      </div>
    <% end %>
  </div>
</div>


<%= render partial: "/users_backoffice/transactions/search/my_transactions" %>

<%= render partial: 'users_backoffice/transactions/modals/new_transaction', locals: { transaction: @transaction = Transaction.new} %>
