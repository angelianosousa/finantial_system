<%= form_with(model: [:users_backoffice, transaction], local: true) do |form| %>

  <div class="row">
    <div class="col-md-6 col-xl-6 col-sm-6">
      <div class="form-group">
        <%= form.label :Titulo %>
        <div class='input-group mb-2'>
          <div class='input-group-prepend'>
            <div class='input-group-text'>
              <span class='icon'><i class='fa fa-money'></i></span>
            </div>
          </div>
          <%= form.text_field :title, class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :Valor %>
        <div class='input-group mb-2'>
          <div class='input-group-prepend'>
            <div class='input-group-text'>R$</div>
          </div>
          <%= form.number_field :price_cents, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xl-6 col-sm-6">
      <div class="form-group">
        <%= form.label :recurrence %>
        <%= select "transaction", "recurrence_id", Recurrence.all.collect { |r| [r.title, r.id] }, {}, {class:"form-control"} %>
      </div>
      <div class="form-group">
        <%= form.label :date %>
        <%= form.datetime_field :date, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class:"btn btn-primary" %>
    <%= link_to '', users_backoffice_transactions_path, class:"btn btn-outline-dark fa fa-arrow-left", style:"font-size:25px;" %>
  </div>
<% end %>
