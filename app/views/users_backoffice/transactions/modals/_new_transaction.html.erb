<!-- Modal -->
<div class="modal fade" id="newTransactionModal" tabindex="-1" role="dialog" aria-labelledby="newTransactionModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTransactionModalLabel">Nova Transação</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [:users_backoffice, @transaction], local: true) do |form| %>

          <div class="row">
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :Titulo %>
                <div class='input-group mb-2'>
                  <div class='input-group-prepend'>
                    <div class='input-group-text'>
                      <span class='icon'><i class='fa fa-money'></i></span>
                    </div>
                  </div>
                  <%= form.text_field :title, class:"form-control", placeholder:'Titulo da transação' %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :Valor %>
                <div class='input-group mb-2'>
                  <div class='input-group-prepend'>
                    <div class='input-group-text'>R$</div>
                  </div>
                  <%= form.number_field :price_cents, class:"form-control" %>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :Conta %>
                <%= select "transaction", "recurrence_id", Recurrence.order(:title).collect { |r| [r.title, r.id] }, {}, {class:"form-control"} %>
              </div>
              <div class="form-group">
                <%= form.label :'Data do pagamento' %>
                <%= form.datetime_field :date, class:"form-control", value: Date.today %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= form.submit "Salvar", class:"btn btn-primary" %>
            <button type="button" class="btn btn-secondary fa fa-arrow-left" style="height:40px;" data-dismiss="modal"></button>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>