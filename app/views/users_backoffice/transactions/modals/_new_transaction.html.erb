<!-- Modal -->
<div class="modal fade" id="newTransactionModal" tabindex="-1" role="dialog" aria-labelledby="newTransactionModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTransactionModalLabel">Nova Transação</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [:users_backoffice, @transaction], local: true) do |form| %>
          <% if @transaction.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

              <div class="alert alert-danger" role="alert">
                <ul>
                <% @transaction.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :title %>
                <%= form.text_field :title, class:"form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :date %>
                <%= form.datetime_field :date, class:"form-control" %>
              </div>
            </div>
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :recurrence %>
                <%= form.select :recurrece, Recurrence.all.collect { |r| [r.title, r.id] }, {}, {class:"form-control"} %>
              </div>
              <div class="form-group">
                <%= form.label :value %>
                <%= form.number_field :value, class:"form-control" %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= form.submit "Salvar", class:"btn btn-primary" %>
            <%= link_to '', users_backoffice_transactions_path, class:"btn btn-outline-dark fa fa-arrow-left", style:"font-size:25px;" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>