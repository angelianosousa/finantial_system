<%= form_with model: [:users_backoffice, user_profile], local: true do |form| %>

  <div class='row'>
    <div class='col-md-4'>
      <div class='card'>
        <div class='card-body' style='width: 20rem'>
          <% @user_profile = current_user.user_profile.avatar %> <!-- Variable for set the current user for images profile --->
          <%= @user_profile.attached? ? image_tag(@user_profile, size:"200x200", class:"img-circle profile_img") : image_tag("https://via.placeholder.com/150C/", size:"200x200", class:"img-circle profile_img") %>
        </div>
      </div>
    </div>
    <div class='col-md-8'>
      <div class='card'>
        <div class='card-body'>
          <div class='form-group'>
            <div class='field'>
              <%= form.label :'Nome Completo' %>
              <%= form.text_field :fullname, class:'form-control' %>
            </div>
          </div>
          <div class='form-group'>
            <label>Avatar</label>
            <div class='field'>
              <div class='custom-file'>
                <%= form.label :'Escolher arquivo', class:'custom-file-label', for:'customFile' %>
                <%= form.file_field :avatar, class:'custom-file-input', id:'customFile' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br>

  <div class='btn-group actions'>
    <%= form.submit 'Salvar', class:'btn btn-primary' %>&nbsp;
    <%= link_to 'Voltar', users_backoffice_dashboard_index_path, class:'btn btn-danger' %>
  </div>
<% end %>