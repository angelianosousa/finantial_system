<!-- Modal -->
<div class="modal fade" id="newRecurrenceModal" tabindex="-1" role="dialog" aria-labelledby="newRecurrenceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newRecurrenceModalLabel">Nova Conta</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [:users_backoffice, @recurrence], method: :post, local: true) do |form| %>

          <div class="row">
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :title %>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <span class='icon'><i class='fa fa-money'></i></span>
                    </div>
                  </div>
                  <%= form.text_field :title, class:"form-control", placeholder:'Nome da conta' %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :'price_cents' %>
                <div class='input-group mb-2'>
                  <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                  </div>
                  <%= form.number_field :price_cents, class:"form-control" %>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :date_expire %>
                <%= form.datetime_field :date_expire, class:"form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :category %>
                <%= form.select :category_id, Category.all.collect { |c| [c.title, c.id] }, {}, {class:"form-control"} %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= form.submit "Salvar", class:"btn btn-primary", style:"height:40px;" %>
            <button type="button" class="btn btn-secondary fa fa-arrow-left" style="height:40px;" data-dismiss="modal"></button>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>