<!-- Modal -->
<div class="modal fade" id="newRecurrenceModal" tabindex="-1" role="dialog" aria-labelledby="newRecurrenceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newRecurrenceModalLabel">Nova Conta</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [:users_backoffice, @recurrence], method: :post, local: true) do |form| %>
          <% if @recurrence.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@recurrence.errors.count, "error") %> prohibited this recurrence from being saved:</h2>
              
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% @recurrence.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.hidden_field :user_profile_id, value: current_user.id %>
          </div>

          <div class="row">
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :title %>
                <%= form.text_field :title, class:"form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :value %>
                <%= form.number_field :value, class:"form-control" %>
              </div>
            </div>
            <div class="col-md-6 col-xl-6 col-sm-6">
              <div class="form-group">
                <%= form.label :date_expire %>
                <%= form.datetime_field :date_expire, class:"form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :category %>
                <%= form.select :category, Category.all.collect { |c| [c.title, c.id] }, {}, {class:"form-control"} %>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary fa fa-arrow-left" style="height:40px;" data-dismiss="modal"></button>
            <%= form.submit "Salvar", class:"btn btn-primary", style:"height:40px;" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>