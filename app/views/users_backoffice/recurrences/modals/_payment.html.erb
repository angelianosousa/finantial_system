<!-- Modal -->
<div class="modal fade" id="paymentModal_<%= recurrence.id %>" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="paymentModalLabel"><strong>Pagar Conta: </strong><br><%= recurrence.title %></h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: users_backoffice_recurrence_payment_path(recurrence), local: true do |form| %>

          <div class="card text-white bg-dark mb-3">
            <div class="card-body">
              <h5 class="card-title"><strong><%= form.label :'Title:' %> </strong><%= "Pagamento: #{recurrence.title}" %></h5>
              <h5 class="card-title"><strong><%= form.label :'Category:' %> </strong><%= recurrence.category.title %></h5>
              <p class="card-text"><strong><%= form.label :'Price_cents:' %> </strong><%= "R$#{recurrence.price_cents}" %> | <%= I18n.l(Date.today.to_date) %></p>
            </div>
          </div>

          <div class="form-group">
            <%= form.submit "Confirmar", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>