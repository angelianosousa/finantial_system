<h4>Contas</h4> 

<div class="row">

  <div class="col-xl-6 col-md-6 col-sm-6">
    <div class="row">

      <div class="col-xl-2 col-md-2 col-sm-2">
        <%= link_to "#", class:"btn btn-success btn-sm my-2 my-sm-3", "data-toggle":"modal", "data-target":"#newRecurrenceModal", style:"width:80px" do %>
          <i class="fa fa-plus-square"></i>
        <% end %>
      </div>

      <div class="col-xl-9 col-md-9 col-sm-9">
        <%= form_with url: users_backoffice_recurrences_path, method: :get, local: true, class:"form-inline my-2 my-sm-2" do |form| %>
          <%= form.select :recurrence_category, options_for_select([["Receita", 1], ["Despesa", 2]]), {}, {class:"form-control-sm",  style:"width:100px;"} %>&nbsp;
          <%= form.submit "Filtrar", class:"btn btn-info btn-sm my-2 my-sm-2" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xl-6 col-md-6 col-sm-6">
    <%= form_with url: users_backoffice_recurrences_path, method: :get, local: true, class:" form-inline my-2 my-sm-3" do |form| %>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= form.search_field :title, class:"form-control-sm", style:"width:210px;" %>
        </div>
        <%= form.submit 'Pesquisar', class:"btn btn-success btn-sm" %>
      </div>
    <% end %>
  </div>
</div>


<%= render partial: "/users_backoffice/recurrences/search/my_recurrences" %>

<%= render partial: 'users_backoffice/recurrences/modals/new_recurrence', locals: { recurrence: @recurrence = Recurrence.new} %>
