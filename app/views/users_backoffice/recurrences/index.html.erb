<div class="container">
  <nav class="navbar navbar-light" style="background-color:DarkSlateGray;color:white;">
    <a class="navbar-brand" href="/users_backoffice/recurrences">Contas</a>

    <%= form_with url: users_backoffice_recurrences_path, method: :get, local: true, class:" form-inline my-2 my-lg-0" do |form| %>
      <%= form.search_field :title, class:"form-control-sm mr-sm-2", style:"width:210px;" %>
      <%= form.submit 'Pesquisar', class:"btn btn-outline-info btn-sm my-2 my-sm-0" %>
    <% end %>
  </nav>
</div><br>

<nav class="navbar navbar-light" style="background-color:DarkSlateGray;color:white;">
  <%= link_to "#", class:"btn btn-outline-info btn-sm my-sm-3", "data-toggle":"modal", "data-target":"#newRecurrenceModal", style:"width:80px" do %>
    <i class="fa fa-plus-square"></i>
  <% end %>

  <%= form_with url: users_backoffice_recurrences_path, method: :get, local: true, class:"form-inline my-2 my-sm-2" do |form| %>
    <%= form.select :recurrence_category, options_for_select([["Receita", 1], ["Despesa", 2]]), {}, {class:"form-control-sm",  style:"width:100px;"} %>&nbsp;
    <%= form.submit "Filtrar", class:"btn btn-outline-info btn-sm my-2 my-sm-2" %>
  <% end %>

</nav><br>

<%= render partial: "/users_backoffice/recurrences/search/my_recurrences" %>

<%= render partial: 'users_backoffice/recurrences/modals/new_recurrence', locals: { recurrence: @recurrence = Recurrence.new} %>
