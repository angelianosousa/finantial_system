<%= form_with(model: [:users_backoffice, @recurrence], local: true) do |form| %>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :price_cents %>
        <%= form.number_field :price_cents, class:"form-control" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= form.label :date_expire %>
        <%= form.datetime_field :date_expire, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :category %>
        <%= select "recurrence", "category_id", categories_select, {}, {class:"form-control"} %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class:"btn btn-primary", style:"height:40px;" %>
    <%= link_to '', users_backoffice_recurrences_path, class:"btn btn-outline-dark fa fa-arrow-left", style:"font-size:25px;" %>
  </div>
<% end %>

<div class="col-md-12 col-sm-12  ">
  <div class="x_panel">
    <div class="x_title">
      <h2><i class="fa fa-list"></i> Transações dessa conta</h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <% @recurrence.transactions.each do |transaction| %>
        <div class="col-md-4 col-xl-4 col-sm-4">
          <div class="card text-white bg-dark mb-12" style="margin-bottom:10px;">
            <p class="card-header" style="background-color:DarkSlateGray;color:#F0F8FF;"><label class="badge badge-primary"><%= count_transactions(recurrence) %></label>&nbsp;&nbsp;<%= recurrence.title.truncate(30) %></p>
            <div class="card-body">
              <strong>Categoria: </strong><p class="card-title badge badge-<%= recurrence.category.badge %>" ><%= recurrence.category.title %></p>
              <p class="card-text"> <%= humanized_money_with_symbol(recurrence.price_cents) %> | <%= I18n.l(recurrence.date_expire.to_date) %></p>
              <%= link_to "", edit_users_backoffice_recurrence_path(recurrence), class:"btn btn-primary fa fa-edit" %>
              <%= link_to "", users_backoffice_recurrence_path(recurrence), method: :delete, data: { confirm: 'Tem certeza ?' }, class:"btn btn-danger fa fa-trash" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
