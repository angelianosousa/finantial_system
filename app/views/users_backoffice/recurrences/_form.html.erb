<%= form_with(model: [:users_backoffice, @recurrence], local: true) do |form| %>
  <% if @recurrence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recurrence.errors.count, "error") %> prohibited this recurrence from being saved:</h2>
      
      <div class="alert alert-danger" role="alert">
        <ul>
          <% @recurrence.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :value %>
        <%= form.number_field :value, class:"form-control" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= form.label :date_expire %>
        <%= form.datetime_field :date_expire, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.select :category, options_for_select([["Receita", 1], ["Despesa", 2]]), {}, {class:"form-control"} %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class:"btn btn-primary", style:"height:40px;" %>
    <%= link_to '', users_backoffice_recurrences_path, class:"btn btn-outline-dark fa fa-arrow-left", style:"font-size:25px;" %>
  </div>
<% end %>
