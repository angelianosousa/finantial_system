<nav class="navbar navbar-light my-finances-navbar">
  <div class='row'>
    <div class='col'>
      <%= search_form_for @q, url: bills_path, html: { class: 'form-row my-2 my-lg-0' } do |f| %>
        <div class='form-row align-items-center'>
          <div class='form-group col-md-2'>
            <%= f.label :bill_type_eq, 'Bill Type', class: 'label-control', style:'margin-top: 14px;' %>
            <%= f.select :bill_type_eq, Bill.bill_types.keys, 
                                        { include_blank: 'All' },
                                        { data: { style: 'btn btn-link' },  class: 'custom-select' } %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.label :status_eq, 'Status', class:'label-control', style:'margin-top: 14px;' %>
            <%= f.select :status_eq, Bill.statuses.keys,
                                    { include_blank: 'All' },
                                    { data: { style: 'btn btn-link' },  class: 'custom-select' } %>
          </div>

          <div class='form-group col-md-1'>
            <%= f.label :price_cents, 'Price', class:'label-control', style:'margin-top: 14px;' %>
            <%= f.number_field :price_cents_gteq, class:'form-control', in:0..999999 %>
          </div>

          <div class='form-group col-md-1'>
            <%= f.number_field :price_cents_lteq, class:'form-control', in:0..999999, style:'margin-top: 40px;' %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.label :due_pay, 'Due Pay', class:'label-control', style:'margin-top: 14px;' %>
            <%= f.date_field :due_pay_gteq, class:'form-control' %>
          </div>

          <div class='form-group col-md-2'>
            <%= f.date_field :due_pay_lteq, class:'form-control', style:'margin-top: 40px;' %>
          </div>
          
          <div class='form-group col-md-2 text-right mt-5'>
            <%= f.submit 'Search', class:'btn btn-outline-light btn-round btn-sm px-5' %>
            <%= link_to 'Clear', bills_path, class:'btn btn-outline-info btn-round btn-sm px-5 mr-2' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
<br>